<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/green"
    android:id="@+id/card"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_n"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Name "
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_n"
            android:layout_alignBottom="@+id/tv_n"
            android:layout_alignEnd="@+id/tv_email"
            android:layout_alignLeft="@+id/tv_email"
            android:layout_alignRight="@+id/tv_email"
            android:layout_alignStart="@+id/tv_email"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/tv_e"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Address"
            android:textStyle="bold"
            android:layout_below="@+id/tv_n"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/tv_e"
            android:layout_alignBottom="@+id/tv_e"
            android:layout_toEndOf="@+id/tv_n"
            android:layout_toRightOf="@+id/tv_n"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_p"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Time Left:"
            android:layout_below="@+id/tv_e"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_phn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignBottom="@+id/tv_p"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/tv_p"
            android:layout_toRightOf="@+id/tv_p"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>